{
  "name": "create-saas",
  "version": "1.0.0",
  "description": "Create fully bundled SaaS application (Backend & Frontend) using an interactive CLI",
  "main": "bin/cli.js",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "cli": "ts-node cli/cli.ts",
    "heroku-prebuild": "make heroku-prebuild",
    "heroku-postbuild": "echo 'npm run provision && npm run migration'",
    "lint": "tslint -p tsconfig.json -c tslint.json --fix",
    "migration": "make migrate && make seed",
    "pre-commit": "npm run prettier && npm run lint",
    "pre-commit-all": "make pre-commit",
    "prettier": "prettier 'cli/**/*.{js,ts,json}' --write",
    "provision": "make provision",
    "prestart": "make prestart",
    "start-backend": "make start-backend",
    "start-frontend": "make start-frontend",
    "start-api-gw": "ts-node backend/api-gw/src/server.ts",
    "start-config-service": "ts-node backend/services/config-service/src/server.ts",
    "start-metrics-service": "cd backend/services/metrics-service && ts-node --project tsconfig.json src/server.ts",
    "start": "concurrently \"npm run start-config-service\" \"npm run start-metrics-service\" \"sleep 5 && npm run start-api-gw\" \"npm run start-frontend\"",
    "tsc": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frontegg/create-saas.git"
  },
  "keywords": [
    "react",
    "bootstrap",
    "saas",
    "create",
    "nodejs",
    "admin",
    "template",
    "cli",
    "typescript"
  ],
  "author": "Frontegg LTD",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/frontegg/create-saas/issues"
  },
  "homepage": "https://github.com/frontegg/create-saas#readme",
  "dependencies": {
    "chalk": "^4.1.0",
    "child_process": "^1.0.2",
    "command-exists": "^1.2.9",
    "concurrently": "^5.3.0",
    "elegant-spinner": "^2.0.0",
    "lerna": "^3.22.1",
    "log-update": "^4.0.0",
    "ora": "^5.0.0",
    "prompts": "^2.3.2",
    "shelljs": "^0.8.4",
    "ts-node": "^9.0.0",
    "typescript": "^3.9.7",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@types/command-exists": "^1.2.0",
    "@types/prompts": "^2.0.8",
    "@types/shelljs": "^0.8.8",
    "@types/yargs": "^15.0.5",
    "husky": "^4.3.0",
    "prettier": "^2.0.5",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2"
  },
  "bin": "bin/cli.js",
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit-all"
    }
  }
}
